<Window x:Class="Projeto_RA1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="IPC Demo" Height="600" Width="1200" MinHeight="400" MinWidth="560"
        Loaded="Window_Loaded">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="0" Grid.Column="0" Header="Seleção de IPC" Margin="0,0,8,8">
            <StackPanel>
                <ComboBox x:Name="IpcSelector" Height="28" Width="160" Margin="0,6,0,0" SelectedIndex="0">
                    <ComboBoxItem Content="Pipes"/>
                    <ComboBoxItem Content="Sockets"/>
                    <ComboBoxItem Content="Memória"/>
                </ComboBox>
                <StackPanel Orientation="Horizontal" Margin="50,10,0,0">
                    <Button x:Name="BtnStart" Content="Start" Width="80" Margin="0,0,100,0" Click="BtnStart_Click"/>
                    <Button x:Name="BtnStop"  Content="Stop"  Width="80" Click="BtnStop_Click" IsEnabled="False"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Status:" VerticalAlignment="Center"/>
                    <Ellipse x:Name="StatusDot" Width="14" Height="14" Fill="Red" Margin="6,0,0,0"/>
                    <TextBlock x:Name="StatusText" Text="Parado" Margin="6,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="0" Grid.Column="1" Header="Envio de mensagens" Margin="8,0,0,8">
            <StackPanel>
                <Label Content="Digite sua mensagem:"/>
                <TextBox x:Name="MsgInput" Height="60" Margin="0,4,0,0" TextWrapping="Wrap"
                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                <Button x:Name="BtnSend" Content="Enviar" Width="100" Margin="0,10,0,0"
                        Click="BtnSend_Click"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="0" Header="Log de comunicação" Margin="0,8,8,0">
            <DockPanel>
                <Button x:Name="BtnClearLog" Content="Limpar Log" DockPanel.Dock="Top" Width="100" Margin="0,0,0,6"
                        Click="BtnClearLog_Click"/>
                <ListBox x:Name="LogList" />
            </DockPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Representação visual" Margin="8,8,0,0">
            <Canvas x:Name="VisualArea" Background="White" SnapsToDevicePixels="True"/>
        </GroupBox>
    </Grid>
</Window>
